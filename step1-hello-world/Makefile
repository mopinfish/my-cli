# 基本的な使用
run:
	cargo run

# 名前を指定
run-by-name:
	cargo run -- --name Alice

# 短いオプション
run-with-opt:
	cargo run -- -n Bob

# 複数回実行
run-multi:
	cargo run -- --name Charlie --count 3

# 大文字で表示
run-uppercase:
	cargo run -- --name Dave --uppercase

# 全オプション組み合わせ
run-with-all-opt:
	cargo run -- -n Eve -c 2 -u

# ヘルプ表示
help:
	cargo run -- --help
